{
  "name": "device-management-api",
  "version": "1.0.0",
  "description": "API that manages devices",
  "main": "index.ts",
  "repository": "https://github.com/isandroazedo/device-management-api.git",
  "author": "isandroazedo",
  "license": "MIT",
  "scripts": {
    "start": "nodemon index.ts",
    "build": "tsc --project ./",
    "test": "jest --detectOpenHandles",
    "testci": "npx sequelize-cli db:migrate --env ci && export NODE_ENV=ci && jest --detectOpenHandles",
    "migrate": "npx sequelize-cli db:migrate",
    "pretest": "npx sequelize-cli db:migrate --env test"
  },
  "private": false,
  "dependencies": {
    "@types/cors": "^2.8.12",
    "cors": "^2.8.5",
    "mysql2": "^2.2.5",
    "sequelize": "^6.6.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.2",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.6.3",
    "express": "^4.17.1",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/routes/management/*.+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": ["build"]
  }
}
